{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "ts-dist",
        "baseUrl": ".",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"]
        },
    },
    "include": [
        "./src/**/*",
    ],
}